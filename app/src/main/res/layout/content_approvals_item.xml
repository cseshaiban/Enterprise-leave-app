<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        >

        <LinearLayout
            android:id="@+id/expandCollapseLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/shaiban"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFFFF"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
              >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mohammed Shaiban"
                    android:padding="5dp"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="md.shaiban@incture.com"
                    android:textSize="15dp"
                   />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/scrollUpLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end|center_horizontal"
                >
            <ImageView
                android:id="@+id/scrollUpImageview"
                android:layout_gravity="right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/collapse"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:visibility="gone"

                />

            </RelativeLayout>
        </LinearLayout>


        <!-- Holiday Dates -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="5dp"
           android:weightSum="5">

           <!-- StartDate -->
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
               android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="16"
                    android:textSize="80dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="15dp"
                    >

                    <TextView
                        android:id="@+id/smonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="NOV"/>

                    <TextView
                        android:id="@+id/syear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="2015"/>

                    <TextView
                        android:id="@+id/sday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:text="MON"/>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/ssession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#f6f6f6"
                android:layout_gravity="center_horizontal"

                />
        </LinearLayout>

          <!-- to  -->
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:textStyle="bold"
               android:textSize="20dp"
               android:layout_gravity="center_horizontal"
               android:gravity="center_horizontal|center"
               android:text="to"/>

           <!-- End Date -->
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_weight="2">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/edate"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="18"
                       android:textSize="80dp"/>

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:paddingTop="15dp"
                       >

                       <TextView
                           android:id="@+id/emonth"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20dp"
                           android:text="NOV"/>

                       <TextView
                           android:id="@+id/eyear"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="15dp"
                           android:text="2015"/>

                       <TextView
                           android:id="@+id/eday"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="20dp"
                           android:text="MON"/>

                   </LinearLayout>


               </LinearLayout>
               <TextView
                   android:id="@+id/esession"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="SESSION 1"
                   android:padding="5dp"
                   android:layout_gravity="center_horizontal"
                   android:background="#f6f6f6"

                   />

           </LinearLayout>
        </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#E0E0E0"/>

        </LinearLayout>

        <LinearLayout
               android:id="@+id/expandCollapseLayoutHideInitial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                 >
            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Casual Leave"
                android:textSize="20dp"
                android:padding="10dp"
                android:textColor="#212121"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:textColor="#959595"
                android:textSize="15dp"
                android:text="Attending Cousins wedding this thursdays on Andamon Nicobar. Cannot miss you. Thank you. Hoping for acceptance for leave "
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW TEAM CALENDER"
                android:layout_marginLeft="5dp"
                android:textColor="#484848"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#E0E0E0"
                android:layout_marginTop="5dp"
            />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_marginRight="10dp"
                android:paddingRight="5dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/rejectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REJECT"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor= "#03A9f5"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    />



                <TextView
                    android:id="@+id/approveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="APPROVE"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_margin="5dp"
                    android:textColor= "#03A9f5"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>